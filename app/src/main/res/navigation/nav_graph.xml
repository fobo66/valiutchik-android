<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

  <fragment
      android:id="@+id/settingsFragment"
      android:name="fobo66.exchangecourcesbelarus.ui.SettingsFragment"
      android:label="@string/title_activity_settings">
    <action
        android:id="@+id/action_settingsFragment_to_openSourceLicensesFragment"
        app:destination="@id/openSourceLicensesFragment"
        app:enterAnim="@anim/enter_animation"
        app:exitAnim="@anim/exit_animation"
        app:popEnterAnim="@anim/enter_animation"
        app:popExitAnim="@anim/exit_animation"
        app:popUpTo="@id/settingsFragment" />
  </fragment>
  <fragment
      android:id="@+id/mainFragment"
      android:name="fobo66.exchangecourcesbelarus.ui.MainFragment"
      android:label="@string/app_name"
      tools:layout="@layout/fragment_main">
    <action
        android:id="@+id/action_mainFragment_to_settingsFragment"
        app:destination="@id/settingsFragment"
        app:enterAnim="@anim/enter_animation"
        app:exitAnim="@anim/exit_animation"
        app:popEnterAnim="@anim/enter_animation"
        app:popExitAnim="@anim/exit_animation"
        app:popUpTo="@id/mainFragment" />
  </fragment>
  <fragment
      android:id="@+id/openSourceLicensesFragment"
      android:name="fobo66.exchangecourcesbelarus.ui.OpenSourceLicensesFragment"
      android:label="@string/title_activity_oss_licenses"
      tools:layout="@layout/fragment_open_source_licenses" />
</navigation>