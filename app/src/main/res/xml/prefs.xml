<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <ListPreference
      android:defaultValue="Минск"
      android:entries="@array/pref_cities_list"
      android:entryValues="@array/pref_cities_values"
      android:key="default_city"
      android:negativeButtonText="@null"
      android:positiveButtonText="@null"
      android:title="@string/pref_title_default_city"
      app:useSimpleSummaryProvider="true" />
  <SeekBarPreference
      android:defaultValue="3"
      android:key="update_interval"
      android:max="24"
      android:title="@string/pref_title_update_interval"
      app:min="1"
      app:showSeekBarValue="true" />
</PreferenceScreen>
