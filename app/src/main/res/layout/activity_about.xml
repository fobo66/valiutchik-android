<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fobo66.exchangecourcesbelarus.ui.AboutActivity">

  <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="?attr/colorPrimary"
      android:theme="@style/ExchangeCoursesTheme"
      app:elevation="4dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:popupTheme="@style/ExchangeCoursesTheme" />

  <TextView
      android:id="@+id/my_copyright"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingTop="@dimen/activity_vertical_margin"
      android:text="@string/copyright"
      android:textSize="18sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/toolbar"/>

  <TextView
      android:id="@+id/app_description"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginLeft="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:paddingStart="16dp"
      android:paddingLeft="16dp"
      android:paddingTop="@dimen/activity_vertical_margin"
      android:paddingEnd="16dp"
      android:paddingRight="16dp"
      android:text="@string/app_desc"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/my_copyright" />

  <TextView
      android:id="@+id/info_warn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginLeft="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:paddingStart="16dp"
      android:paddingLeft="16dp"
      android:paddingTop="@dimen/activity_vertical_margin"
      android:paddingEnd="16dp"
      android:paddingRight="16dp"
      android:text="@string/about_activity_warn"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/app_description" />

  <TextView
      android:id="@+id/source_copyright"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:autoLink="all"
      android:paddingTop="@dimen/activity_vertical_margin"
      android:text="@string/myfin_copyright"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/info_warn" />


</androidx.constraintlayout.widget.ConstraintLayout>
