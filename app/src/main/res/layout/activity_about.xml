<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fobo66.exchangecourcesbelarus.ui.AboutActivity">

    <TextView android:text="@string/copyright" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_copyright"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textSize="18sp" />
    <TextView android:text="@string/app_desc" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/app_description"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textSize="16sp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/my_copyright"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView android:text="@string/about_activity_warn" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info_warn"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textSize="16sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/app_description"
        android:layout_alignParentLeft="true" />
    <TextView android:text="@string/myfin_copyright" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/source_copyright"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textSize="16sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/info_warn"
        android:layout_alignParentLeft="true" />


</RelativeLayout>
